{
  "name": "@marbemac/root",
  "version": "0.0.0",
  "private": true,
  "packageManager": "yarn@4.1.1",
  "engines": {
    "node": ">= 20"
  },
  "workspaces": {
    "packages": [
      "packages/configs/*",
      "packages/db/*",
      "packages/domains/*/*",
      "packages/server/*",
      "packages/ui/*",
      "packages/utils/*"
    ]
  },
  "scripts": {
    "--deps--": "",
    "upgrade-deps": "yarn upgrade-interactive",
    "upgrade-nx": "nx migrate latest && nx migrate --run-migrations",
    "check-constraints": "yarn constraints",
    "doctor": "yarn dlx @yarnpkg/doctor",
    "--dev--": "",
    "dev": "nx run-many --target dev --output-style stream",
    "graph": "nx graph",
    "clean": "rm -r **/node_modules && rm -r **/dist && rm -r **/build",
    "codegen": "nx run-many --target codegen",
    "storybook": "yarn workspace @marbemac/ui-primitives storybook",
    "lint": "nx run-many --target lint",
    "lint.fix": "yarn lint --fix && prettier --ignore-path .eslintignore --write \"**/*.{ts,tsx}\";",
    "test": "nx run-many --target test",
    "typecheck": "nx run-many --target typecheck"
  },
  "resolutions": {
    "@noble/hashes": "~1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240312.0",
    "@types/node": "^20.11.27",
    "@types/react": "18.2.65",
    "@types/react-dom": "18.2.22",
    "@yarnpkg/types": "~4.0.0",
    "nx": "18.0.8",
    "prettier": "3.2.5",
    "prettier-plugin-classnames": "~0.6.2",
    "typescript": "5.4.2"
  },
  "--https://fig.io/docs/guides/autocomplete-for-npm-scripts#adding-the-fig-object--": "",
  "fig": {
    "dev": {
      "description": "Start everything for local development",
      "icon": "‚≠êÔ∏è",
      "priority": 100
    },
    "test": {
      "description": "Test everything",
      "icon": "üß™",
      "priority": 80
    },
    "lint": {
      "description": "Lint everything",
      "icon": "üöß",
      "priority": 70
    },
    "upgrade-deps": {
      "description": "Use this to upgrade any deps except NX",
      "icon": "‚è´",
      "priority": 60
    },
    "upgrade-nx": {
      "description": "Use this to upgrade and migrate NX",
      "icon": "‚§¥Ô∏è",
      "priority": 59
    }
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-classnames"
    ],
    "customAttributes": [],
    "customFunctions": [
      "tx",
      "tw"
    ],
    "endingPosition": "absolute-with-indent",
    "tailwindFunctions": [
      "tw",
      "tx"
    ],
    "arrowParens": "avoid",
    "printWidth": 120,
    "trailingComma": "all",
    "proseWrap": "always",
    "singleQuote": true,
    "overrides": [
      {
        "files": "package*.json",
        "options": {
          "printWidth": 1000
        }
      }
    ]
  }
}
